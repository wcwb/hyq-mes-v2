{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "build:ssr": "vite build && vite build --ssr",
        "dev": "vite",
        "format": "prettier --write resources/",
        "format:check": "prettier --check resources/",
        "lint": "eslint . --fix",
        "test": "vitest",
        "test:run": "vitest run",
        "test:watch": "vitest --watch",
        "test:coverage": "vitest run --coverage",
        "test:ui": "vitest --ui",
        "test:e2e": "mocha tests/e2e/**/*.test.cjs --timeout 30000",
        "test:e2e:headless": "HEADLESS=true mocha tests/e2e/**/*.test.cjs --timeout 30000",
        "test:e2e:comprehensive": "cd tests/frontend/e2e && node run-comprehensive-tests.cjs",
        "test:e2e:comprehensive:headless": "cd tests/frontend/e2e && HEADLESS=true node run-comprehensive-tests.cjs"
    },
    "devDependencies": {
        "@eslint/js": "^9.19.0",
        "@testing-library/jest-dom": "^6.6.3",
        "@testing-library/vue": "^8.1.0",
        "@types/node": "^22.13.5",
        "@vitest/coverage-v8": "^3.2.3",
        "@vitest/ui": "^3.2.3",
        "@vue/eslint-config-typescript": "^14.3.0",
        "@vue/test-utils": "^2.4.6",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^10.0.1",
        "eslint-plugin-vue": "^9.32.0",
        "happy-dom": "^18.0.1",
        "jest": "^29.7.0",
        "jsdom": "^26.1.0",
        "mocha": "^11.6.0",
        "node-fetch": "^3.3.2",
        "prettier": "^3.4.2",
        "prettier-plugin-organize-imports": "^4.1.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "puppeteer": "^24.10.1",
        "typescript-eslint": "^8.23.0",
        "vitest": "^3.2.3",
        "vue-tsc": "^2.2.4"
    },
    "dependencies": {
        "@inertiajs/vue3": "^2.0.0",
        "@tailwindcss/vite": "^4.1.1",
        "@vitejs/plugin-vue": "^5.2.1",
        "@vueuse/core": "^12.8.2",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^1.0",
        "lucide-vue-next": "^0.468.0",
        "reka-ui": "^2.2.0",
        "tailwind-merge": "^3.2.0",
        "tailwindcss": "^4.1.1",
        "tw-animate-css": "^1.2.5",
        "typescript": "^5.2.2",
        "vite": "^6.2.0",
        "vue": "^3.5.13",
        "vue-i18n": "^11.1.5",
        "ziggy-js": "^2.4.2"
